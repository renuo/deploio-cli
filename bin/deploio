#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH.unshift File.expand_path('../lib', __dir__)

require 'deploio'

$stdout.sync = true

begin
  Deploio::CLI.start(ARGV)
rescue Deploio::Error => e
  Deploio::Output.error(e.message)
  exit 1
rescue Interrupt
  puts "\nInterrupted"
  exit 130
end
